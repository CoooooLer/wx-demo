.cart .address-btn {
  padding: 20rpx 0;
}
.cart .address-btn button {
  width: 60%;
}
.cart .address {
  display: flex;
  padding: 20rpx;
  font-size: 30rpx;
}
.cart .address .left {
  flex: 6;
}
.cart .address .left .detail {
  font-size: 28rpx;
}
.cart .address .right {
  flex: 3;
  text-align: right;
}
.cart-box .cart-title {
  padding: 20rpx 30rpx;
  color: var(--themeColor);
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}
.cart-box .cart-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.cart-box .cart-item .item-check {
  flex: 2;
}
.cart-box .cart-item .item-img {
  flex: 3;
  height: 100rpx;
  overflow: hidden;
}
.cart-box .cart-item .item-img image {
  height: auto;
  width: 80%;
}
.cart-box .cart-item .item-info {
  flex: 7;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart-box .cart-item .item-info .info-title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 32rpx;
}
.cart-box .cart-item .item-info .info-price-box {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-box .cart-item .item-info .info-price-box .price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart-box .cart-item .item-info .info-price-box .price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-box .cart-item .item-info .info-price-box .price-num .num-reduce {
  padding: 0 12rpx;
  border: 1rpx solid #ccc;
}
.cart-box .cart-item .item-info .info-price-box .price-num .num-num {
  margin: 0 10rpx;
  font-size: 32rpx;
}
.cart-box .cart-item .item-info .info-price-box .price-num .num-plus {
  padding: 0 8rpx;
  border: 1rpx solid #ccc;
}
.tool-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #ccc;
}
.tool-bottom .bottom-check {
  padding-left: 10rpx;
}
.tool-bottom .bottom-price {
  flex: 5;
  display: flex;
  flex-direction: column;
  text-align: right;
  padding-right: 10rpx;
}
.tool-bottom .bottom-price .price-num {
  display: flex;
  justify-content: flex-end;
}
.tool-bottom .bottom-price .price-num .price-text {
  color: var(--themeColor);
  font-size: 34rpx;
}
.tool-bottom .pay {
  flex: 2;
  background-color: var(--themeColor);
  color: #fff;
  text-align: center;
  font-weight: 600;
  font-size: 34rpx;
  padding: 25rpx 0;
}
